{
  "request": {
    "method": "POST",
    "url": "/perks",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.price"
      },
      {
        "matchesJsonPath": "$.discountRate"
      }
    ]
  },
  "response": {
    "status": 201,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "price": "{{math (jsonPath request.body '$.price') '*' ( math 1 '-' (jsonPath request.body '$.discountRate'))}}"
    }
  }
}
